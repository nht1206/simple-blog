
<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Home

        </h1>


        {{#each posts}}

        <!-- Blog Post -->
        <div class="card mb-4">
            <img class="card-img-top" src="/uploads/{{image}}" alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">{{body}}</p>
                <a href="/post/{{id}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                <a>Post on {{ConvertTime Date 'MMMM Do YYYY'}} By </a>
                <a href="/">My blog</a>
            </div>
        </div>

        {{/each}}



        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">

            {{#paginate current=current pages=pages}}{{/paginate}}

        </ul>

    </div>



    <!-- Sidebar Widgets Column -->

    {{> home/sidebar}}



</div>
<!-- /.row -->
